body
  background-color body_background_color
  margin 0
  padding 0
  height 100%

ul, ol
  list-style none

strong
  color link_color

h1, h2, h3, h4
  font-family MuseoSans, "century gothic", arial, sans-serif
  color header_color
  line-height 1.2em
  text-transform uppercase

h1
  font-size 36px
  font-weight 500

h2
  &.subtitle
    font normal 24px / 1em MuseoSans, "century gothic", arial
    text-transform none

section
  padding-top 40px
  width 100%
  min-height 50vh
  margin 0 auto
  display block

  .content-container
    width 75%
    margin 0 auto

    &.centered
        text-align center

p
  color body_color
  font normal 16px/1.8em "MuseoSans", "century gothic", arial
  line-height 23px

  &.short-width
    width 50%

a
  color link_color
  text-decoration none
  &:hover
    color link_hover_color
    text-decoration underline

.primary-nav
  z-index 50
  width 100%
  height 69px
  background url('../images/navbar-bg.jpg') repeat-x 0 0 body_background_color
  box-shadow 0 1px 10px #000
  position relative

  .nav-texture
    background url('../images/navbar-texture.png') no-repeat center 0

  ul
    text-align center
    margin 0 auto
    padding 0
    min-width 1000px
    overflow hidden

    li
      display inline-block
      text-align center
      background url('../images/divider.jpg') no-repeat left bottom
      z-index 10
      height 68px
      img
        display none

      &:first-of-type
        background none

        &.show-logo
          text-indent -9999

          img
            display block
            margin-top -60px
            margin-right 20px
            filter drop-shadow(0 0 5px #000);
            -webkit-filter drop-shadow(0 0 5px #000);

      a
        display inline-block
        padding 26px 45px 25px 45px
        color nav_link_color
        font normal 16px/1.8em "MuseoSans", "century gothic", arial
        text-transform uppercase
        text-shadow 0 0 5px rgba(0,0,0, .5)
      &.active a
        color #fff


      a:hover
        color link_hover_color
        text-decoration none