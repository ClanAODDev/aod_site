.game
  background-repeat no-repeat
  display block
  opacity .5
  width 48px
  height 48px
  transition opacity 0.6s

  &:hover
    filter drop-shadow(0 0 2px #000);
    -webkit-filter drop-shadow(0 0 2px #000);
    opacity 1
    transition 0.6s

