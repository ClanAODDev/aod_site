/**
 * DIVISION AREA
 */

.game-header
  display flex
  flex-direction row
  align-items center
  .game
    opacity 1
    margin-right 15px



section.division
  &.bf
    background-image url('../images/division-headers/bf.jpg'), url('../images/division-bg-border.jpg')
    background-repeat no-repeat, repeat-x
    background-position top center

  h2
    background url('../images/division-header-bg.jpg') no-repeat center
    height 50px
    padding-left 15px
    display flex
    align-items center

  .sub-nav
    margin-top 150px
    ul
      padding 0
      text-indent 0
      li
        display inline-block
        padding 15px
        font-family font_face
        text-transform uppercase
        border solid 1px #ffffff
        border-radius 10px
        margin-right 15px
        opacity 0.3
        transition opacity 0.6s ease
        color #fff
        &:hover
          opacity 1
          transition opacity 0.6s ease
