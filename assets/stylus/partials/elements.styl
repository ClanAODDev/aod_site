ul, ol
  list-style none

h1, h2, h3, h4
  font-family MuseoSans, "century gothic", arial, sans-serif
  color header_color
  line-height 1.2em
  text-transform uppercase

h2
  &.subtitle
    font normal 24px / 1em MuseoSans, "century gothic", arial
    text-transform none

section
  width 960px
  margin 0 auto
  display block

p
  color body_color
  font-family arial, sans-serif
  font-size 14px

a
  color link_color
  text-decoration none
  &:hover
    color link_hover_color
    text-decoration underline

body
  background-color body_background_color
  margin 0
  padding 0
  height 100%

.primary-nav
  z-index 50
  width 100%
  height 69px
  background url('../images/navbar-bg.png') repeat-x 0 0 body_background_color
  box-shadow 0 1px 10px #000
  position relative

  .nav-texture
    background url('../images/navbar-texture.png') no-repeat center 0

  ul
    text-align center
    margin 0 auto
    padding 0
    min-width 960px
    overflow hidden

    li
      display inline-block
      text-align center
      background url('../images/divider.jpg') no-repeat left bottom
      z-index 10

      a
        display inline-block
        padding 26px 45px 25px 45px
        color nav_link_color
        font-family "Arial Narrow", arial, sans-serif
        text-transform uppercase
        text-shadow 0 0 5px rgba(0,0,0, .5)
      &.active a
        color #fff


      a:hover
        color link_hover_color
        text-decoration none