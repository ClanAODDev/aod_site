@media (max-width: 1020px)
  .section-content-container
    width none !important


  .hero-video #video
    display none

  .primary-nav ul li
    background none

  .section--short-width
    display block !important

  section.lobby
    background none !important

    .divisions-list
      margin-top 20px

  .footer-section
    flex 100%
    padding 15px

  #menu-primary
    display none

  section
    padding 20px
    &.founded-info .section-image
      display none

    &.founded-info .section-blurb
      width 100%


@media (max-width: 1260px)
  section.founded-info .section-image
    position absolute !important
    top -80px !important
    right -80px !important
    img
      width 600px
      height 600px


@media (min-width: 1280px)
  .section-content-container
    width 960px

