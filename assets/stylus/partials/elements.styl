body
  background-color body_background_color
  margin 0
  padding 0
  height 100%

ul, ol
  list-style none

strong
  color link_color

h1, h2, h3, h4
  font-family MuseoSans, "century gothic", arial, sans-serif
  color header_color
  line-height 1.2em
  text-transform uppercase

h1
  font-size 36px
  font-weight 500

h2
  &.subtitle
    font normal 24px / 1em MuseoSans, "century gothic", arial
    text-transform none

section
  padding 30px 0
  width 100%
  min-height 300px
  box-shadow 0 0 10px #000
  margin 0 auto
  display block

  a
    font-weight 700
    transition 0.6s

  .content-container
    width 75%
    margin 0 auto

    &.centered
        text-align center

p
  color body_color
  font normal 16px/1.8em "MuseoSans", "century gothic", arial
  line-height 26px

  &.short-width
    width 50%

a
  color link_color
  text-decoration none
  &:hover
    color link_hover_color
    transition 0.6s

a.call-to-action-button
  border solid 3px #fff
  padding 20px
  border-radius 40px
  color #fff
  margin-top 20px
  display inline-block
  font-family MuseoSans, "century gothic", arial, sans-serif
  font-size 24px
  text-transform uppercase

  &:hover
    background-color #ffffff
    color #000000

/** nav bar **/

.primary-nav
  z-index 50
  width 100%
  height 69px
  background url('../images/navbar-bg.jpg') repeat-x 0 0 body_background_color
  box-shadow 0 1px 10px #000
  position relative

  .nav-texture
    background url('../images/navbar-texture.png') no-repeat center 0

  ul
    text-align center
    margin 0 auto
    padding 0
    min-width 1000px
    overflow hidden

    li
      display inline-block
      text-align center
      background url('../images/divider.jpg') no-repeat left bottom
      z-index 10
      height 68px
      img
        display none

      &:first-of-type
        background none

        &.show-logo
          text-indent -9999

          img
            display block
            margin-top -70px
            margin-right 20px
            filter drop-shadow(0 0 5px #000);
            -webkit-filter drop-shadow(0 0 5px #000);

      a
        display inline-block
        padding 26px 45px 25px 45px
        color nav_link_color
        font normal 16px/1.8em "MuseoSans", "century gothic", arial
        text-transform uppercase
        text-shadow 0 0 5px rgba(0,0,0, .5)
      &.active a
        color #fff

      a:hover
        color link_hover_color
        text-decoration none

section.primary-footer
  .content-container
    display -webkit-flex
    display flex
    -webkit-flex-direction row
    flex-direction row
.announcements, .twitter-feed
  padding 0 30px
  width 50%
  h1
    font-family MuseoSans, "century gothic", arial, sans-serif
    font-size 18px
  ul
    margin 0
    padding 0
  ul li
    line-height 25px
    display block
    font-family Tahoma, sans-serif
    font-size 12px
    padding-bottom 15px
    
    .meta
      color rgba(255,255,255,.2)
      display block
  a
    font-weight lighter
