/** HERO AREA **/
.aod-logo
  filter drop-shadow(0px 0px 5px #222)
  -webkit-filter drop-shadow(0px 0px 5px #222)
  width 200px

.hero-video
  background url(../../_images/company/careers/home-video-thumb.jpg) no-repeat center top
  height 550px
  .hero-text
    width 60%
    color #fff
    z-index 3
    position relative
    margin 0 auto
    text-align center

.hero-text
  h1
    font-size 48px
    text-shadow 0 0 2px rgba(0, 0, 0, .4)

.grid
  position absolute
  top 0
  left 0
  height 550px
  width 100%
  z-index 2
  background rgba(0, 0, 0, .5) url(https://static.wixstatic.com/media/0da768_4371c7e64a49489bb88c536f515f2040.png)

.video-container
  position absolute
  height 550px
  width 100%
  overflow hidden
  top 0
  right 0
  left 0
  margin 0 auto

video, .ie8-poster
  object-fit cover
  height 550px
  top 0
  left 0
  position absolute
  width 100%
  overflow hidden

