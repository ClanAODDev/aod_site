/**
 * ----------------
 * HERO AREA
 * ----------------
 **/

@import "partials/games"

/** media **/

@media (max-width: 1020px)
  .video-container .grid
    display none

  .hero-video video
    display none



.aod-logo
  filter drop-shadow(0px 0px 5px #222)
  -webkit-filter drop-shadow(0px 0px 5px #222)
  width 250px

.hero-video
  height 560px

  .hero-text
    width 60%
    color #fff
    z-index 3
    position relative
    margin 0 auto
    text-align center

    h1
      font-size 48px
      text-shadow 0 0 2px rgba(0, 0, 0, .4)

.grid
  position absolute
  top 0
  left 0
  height 560px
  width 100%
  z-index 2
  background rgba(0, 0, 0, .5) url(https://static.wixstatic.com/media/0da768_4371c7e64a49489bb88c536f515f2040.png)

.video-container
  background url('../images/video-poster.jpg') no-repeat
  object-fit cover
  padding-top 60px
  position absolute
  height 570px
  width 100%
  min-width 960px
  overflow hidden
  top 0
  right 0
  left 0
  margin 0 auto

video, .ie8-poster
  object-fit cover
  height 600px
  top 0
  left 0
  position absolute
  width 100%
  overflow hidden
  padding-bottom 60px

/** supported games **/

.supported-games
  background url(supported_games_bg_image) supported_games_bg_color no-repeat center 0
  overflow visible

  .content-container
    padding 40px 0

ul.games-listing li
  text-align center
  display inline-block
  margin 15px
  text-indent -9999
